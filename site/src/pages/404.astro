---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found | Virginia Page & Co. Hair Studio">
  <section class="py-32 px-6 text-center">
    <div class="max-w-2xl mx-auto">
      <span class="text-8xl font-light text-[--color-gold] block mb-8" style="font-family: var(--font-display);">404</span>
      <h1 class="display-md mb-6" style="font-family: var(--font-display);">
        Page Not Found
      </h1>
      <p class="text-xl text-[--color-taupe] mb-12 max-w-lg mx-auto">
        We couldn't find the page you're looking for. Let's get you back on track.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/" class="btn btn-primary">
          Back to Home
        </a>
        <a href="/book" class="btn btn-outline">
          Book an Appointment
        </a>
      </div>
    </div>
  </section>
</Layout>
